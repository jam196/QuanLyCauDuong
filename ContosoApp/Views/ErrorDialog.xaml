<ContentDialog
    x:Class="QuanLyCauDuong.Views.ErrorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:QuanLyCauDuong.Views"
    Title="Có lỗi xảy ra"
    Content="Các thông tin bạn vừa nhập sẽ không được lưu lại?"
    CloseButtonText = "Ok"
    CloseButtonClick="ErrorDialog_CloseButtonClick"
    mc:Ignorable="d">
    <ContentDialog.Resources>
        <Style TargetType="local:ErrorDialog" BasedOn="{StaticResource DefaultContentDialogStyle}"/>
    </ContentDialog.Resources>
</ContentDialog>
